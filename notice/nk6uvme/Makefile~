NOTICE_HOME= /usr/local/notice
NOTICE_LIB = $(NOTICE_HOME)/lib
NOTICE_INC = $(NOTICE_HOME)/include

LIBUSB_INC = /usr/include/libusb-1.0
LIBUSB_LIB = /usr/lib64

INSTALL_LIB = $(NOTICE_HOME)/lib
INSTALL_INC = $(NOTICE_HOME)/include

MODULE = programmer_nk6uvme

SrcSuf = cpp
HdrSuf = h
ObjSuf = o
OutPutOpt = -o #

CXXFLAGS = -I. -I$(LIBUSB_INC) -Wall -Wundef -Wunused -Wshadow -O2 -fPIC -m64
LDFLAGS = -L$(LIBUSB_LIB) -lusb-1.0

PROGRAMMERS = Programmer.cpp Actions.cpp Device.cpp pvmex.cpp Option.cpp
PROGRAMMERH = Actions.h Device.h pvmex.h Option.h
PROGRAMMERO = Programmer.o Actions.o Device.o pvmex.o Option.o

PROGRAM = $(MODULE).exe

all: $(PROGRAM)

clean:
	@rm -rf $(PROGRAMMERO) $(PROGRAMS)

$(PROGRAM): $(PROGRAMMERO)
	$(CXX) $(LDFLAGS) $^ $(OutPutOpt) $@ $(EXPLLINKLIBS)

#dependicies
Actions.cpp : Actions.h Device.h pvmex.h
Device.cpp : Device.h pvmex.h
